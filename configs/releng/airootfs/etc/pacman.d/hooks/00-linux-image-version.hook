# remove from airootfs!
[Trigger]
Operation = Install
Type = Package
Target = linux-steev

[Action]
Description = Changing mkinitcpio preset accroding to linux image version...
When = PostTransaction
Depends = glibc
Depends = sed
Depends = sh
Exec = /bin/sh -c 'KVER=$(basename /usr/lib/modules/*ARCH) && sed -i "s/ALL_kver=.*/ALL_kver=\"$KVER\"/g" /etc/mkinitcpio.d/linux-steev.preset'
